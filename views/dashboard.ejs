<div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Create New Move</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
          <form class="text-center border border-light p-3" action="/dashboard/move" method="post"> <!-- ADDED THE ACTION AND THE METHOD-->
              <!-- Customer Name -->
              <input
                  type="customername"
                  id="customername"
                  name="customername"
                  class="form-control mb-4"
                  placeholder="Customer Name"
                  value="<%= typeof customername != 'undefined' ? customername : '' %>"
              />
          
              <!-- Phone Number -->
              <input
                  type="phonenumber"
                  id="phonenumber"
                  name="phonenumber"
                  class="form-control mb-4"
                  placeholder="Telephone Number"
                  value="<%= typeof phonenumber != 'undefined' ? phonenumber : '' %>"
              />

              <!-- Town -->
              <input
                  type="town"
                  id="town"
                  name="town"
                  class="form-control mb-4"
                  placeholder="Town"
                  value="<%= typeof town != 'undefined' ? town : '' %>"
              />

              <!-- Move From Address -->
                <input
                  type="movefromaddress"
                  id="movefromaddress"
                  name="movefromaddress"
                  class="form-control mb-4"
                  placeholder="Mooving From"
                  value="<%= typeof movefromaddress != 'undefined' ? movefromaddress : '' %>"
                />

              <!-- Move To Address -->
              <input
                  type="movetoaddress"
                  id="movetoaddress"
                  name="movetoaddress"
                  class="form-control mb-4"
                  placeholder="Moving To"
                  value="<%= typeof movetoaddress != 'undefined' ? movetoaddress : '' %>"
              />

              <!-- Number Of Stairs -->
              <input
                  type="numberofstairs"
                  id="numberofstairs"
                  name="numberofstairs"
                  class="form-control mb-4"
                  placeholder="Number Of Stairs"
                  value="<%= typeof numberofstairs != 'undefined' ? numberofstairs : '' %>"
              />

              <!-- Number of rooms -->
              <input
                  type="numberofrooms"
                  id="numberofrooms"
                  name="numberofrooms"
                  class="form-control mb-4"
                  placeholder="Number Of Rooms"
                  value="<%= typeof numberofrooms != 'undefined' ? numberofrooms : '' %>"
              />

              <!-- Move Date -->
              <input
                  type="movedate"
                  id="movedate"
                  name="movedate"
                  class="form-control mb-4"
                  placeholder="Move Date (MM/DD/YYYY)"
                  value="<%= typeof movedate != 'undefined' ? movedate : '' %>"
              />

              <!-- Move time -->
              <input
                  type="movetime"
                  id="movetime"
                  name="movetime"
                  class="form-control mb-4"
                  placeholder="Move Time (HH:MM)"
                  value="<%= typeof movetime != 'undefined' ? movetime : '' %>"
              />

              <!-- Description -->
              <div class="form-group">
              <textarea
                  type="description"
                  id="description"
                  name="description"
                  class="form-control mb-4"
                  placeholder="Description"
                  value="<%= typeof description != 'undefined' ? description : '' %>"
              ></textarea> 
              <button type="submit" class="btn btn-primary btn-block">Create Move</button>
          </form>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        
      </div>
    </div>
  </div>
</div>